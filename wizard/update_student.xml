<?xml version="1.0" encoding="utf-8"?>
<odoo>

      <record id="view_update_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">update.student.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="rollNo"/>
                        <field name="age"/>
                        <field name="date_of_birth"/>
                        <field name="gender"/>

                    </group>
                    <notebook>
                        <page string="Subjects">
                            <group>
                                <field name="class_line">
                                    <tree editable="bottom">
                                        <field name="english"/>
                                        <field name="hindi"/>
                                        <field name="maths"/>
                                        <field name="physics"/>
                                        <field name="chemistry"/>
                                        <field name="total_marks"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                     <footer>
                    <button name="action_update_students" type="object" string="Update" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
                </sheet>
            </form>
        </field>
    </record>



</odoo>